{
    "name": "homewidget-e2e-playwright",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "description": "Browser E2E (minimal, standard, advanced) for homewidget-system using Playwright",
    "license": "MIT",
    "scripts": {
        "test": "playwright test --project=standard",
        "test:minimal": "playwright test --project=minimal",
        "test:standard": "playwright test --project=standard",
        "test:advanced": "playwright test --project=advanced",
        "test:all": "playwright test --project=advanced",
        "test:headed": "playwright test --headed --project=standard",
        "codegen": "playwright codegen ${PLAYWRIGHT_BASE_URL:-http://localhost:3000}",
        "install:browsers": "playwright install --with-deps chromium"
    },
    "devDependencies": {
        "@playwright/test": "1.57.0",
        "@types/node": "^25.0.1",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "filenamify": "^7.0.1"
    }
}
