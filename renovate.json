{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^expo",
        "^react-native",
        "^react"
      ],
      "groupName": "Expo/RN/React Core"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "Devtools (non-major)",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchCategory": [
        "security"
      ],
      "priority": 10
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
