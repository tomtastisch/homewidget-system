# Stage 1: Build
FROM node:20-slim AS build

ARG EXPO_PUBLIC_API_BASE_URL
ENV EXPO_PUBLIC_API_BASE_URL=$EXPO_PUBLIC_API_BASE_URL

WORKDIR /app/mobile

# Abhängigkeiten kopieren (aus mobile-Verzeichnis)
COPY mobile/package*.json ./

# Installiere Abhängigkeiten
RUN npm install

# Quellcode und globale Config kopieren
COPY mobile/ ./
COPY config/ /app/config/

# Stelle timing.public.json bereit, die sonst im Repository-Root liegt
ARG TIMING_PUBLIC_JSON='{}'
RUN mkdir -p /config && printf '%s' "$TIMING_PUBLIC_JSON" > /config/timing.public.json
# Web-Build erstellen
RUN npm run build

# Stage 2: Serve
FROM nginx:stable-alpine

# Kopiere gebaute Dateien aus Stage 1
COPY --from=build /app/mobile/web-build /usr/share/nginx/html

# Port 80 exponieren
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
